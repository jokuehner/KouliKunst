%!PS-Adobe-3.0

%%% define PHI and inch
/phi { .5  .5 5 sqrt mul add } def
/in { 72 mul } def

%%% define base parallelogram
%%% a=1 b=phi alpha=120°
%%% needs currentpoint
%%% and a rgbcolor

/parallelogram {
    1 in 0 rlineto
    .5 phi mul neg in .5 3 sqrt mul phi mul in rlineto
    1 neg in 0 in rlineto
    closepath
    gsave
    setrgbcolor
    fill
    grestore
} bind def

/folding {
